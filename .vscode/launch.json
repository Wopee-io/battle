{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "development"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Chrome: Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "preLaunchTask": "frontend: dev"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Dev (DB in Docker + backend + frontend)",
      "configurations": [
        "Python: FastAPI backend",
        "Chrome: Frontend"
      ],
      "preLaunchTask": "docker: db up",
      "stopAll": true
    },
    {
      "name": "Backend + Frontend (no DB)",
      "configurations": [
        "Python: FastAPI backend",
        "Chrome: Frontend"
      ],
      "stopAll": true
    }
  ]
}
